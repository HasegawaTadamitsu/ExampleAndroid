<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      android:orientation="vertical"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
              android:gravity="center" >
  <TableLayout 
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:stretchColumns="1">

    <TableRow>
      <TextView  
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" 
	 android:text="@string/gps_address" />
      <TextView  
	 android:id="@+id/gps_textview_address"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
      <TextView  
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" 
	 android:text="@string/gps_latitude" />
      <TextView  
	 android:id="@+id/gps_textview_latitude"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
      <TextView  
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" 
	 android:text="@string/gps_longitude" />
      <TextView  
	 android:id="@+id/gps_textview_longitude"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
      <TextView  
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" 
	 android:text="@string/gps_altitude" />
      <TextView  
	 android:id="@+id/gps_textview_altitude"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
      <TextView  
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" 
	 android:text="@string/gps_accuracy" />
      <TextView  
	 android:id="@+id/gps_textview_accuracy"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
      <TextView  
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" 
	 android:text="@string/gps_speed" />
      <TextView  
	 android:id="@+id/gps_textview_speed"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
      <TextView  
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" 
	 android:text="@string/gps_bearing" />
      <TextView  
	 android:id="@+id/gps_textview_bearing"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content" />
    </TableRow>

  </TableLayout>
 
</LinearLayout>

